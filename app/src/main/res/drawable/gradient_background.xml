<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="#82B6CD"
                android:startColor="#97CEE6"
                android:type="linear" />
            <corners android:radius="8dp" />

            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>